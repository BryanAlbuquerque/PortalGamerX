@model IEnumerable<PortalGamerX.Models.Jogo>

<div class="Titulo"><h1>Todos os Jogos</h1> </div>

<div class="row g-4">
    @foreach (var Jogo in Model)
    {
        <div class="col-md-4 col-lg-3">
            <div class="card">
                <div class="img">
                    <img src="@Jogo.ImagemUrl" alt="@Jogo.Nome">
                </div>

                <div class="body">
                    <h3>@Jogo.Nome</h3>
                    <p class="descricao">@Jogo.Descricao</p>

                    <p class="preco">R$ @Jogo.Preco</p>

                    <a asp-controller="Home" asp-action="index" class="btn-comprar">
                        Comprar
                    </a>
                </div>
            </div>
        </div>
    }
</div>
