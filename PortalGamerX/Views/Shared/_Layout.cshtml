@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] PortalGamerX</title>

    <link rel="stylesheet" href="~/css/Layout.css" />
    <link rel="stylesheet" href="~/css/PortalGamerX.css" />
</head>
<body>
    <header class="site-header">
        <div class="header-inner">
            <div class="logo"><a asp-controller="Home" asp-action="Index">PortalGamerX</a></div>

            <nav class="menu">
                <a asp-controller="Home" asp-action="Explorar">Explorar</a>
                <a asp-controller="Home" asp-action="Jogos">Jogos</a>
                <a asp-controller="Home" asp-action="Produtos">Produtos Geeks</a>
                <a asp-controller="Home" asp-action="Franquias">Franquias</a>
            </nav>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="site-footer">
        <div class="footer-inner">
            <p>© 2025 PortalGamerX — Todos os direitos reservados.</p>
            <p><a href="#">Política de Privacidade</a></p>
        </div>
    </footer>

    <script src="~/js/slider.js"></script>
</body>
</html>
